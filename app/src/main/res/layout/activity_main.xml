<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="20dp"
    android:visibility="visible"
    tools:context="com.example.android.tictactoe.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tic_tac_toe_game"
        android:textAlignment="center"
        android:textSize="40sp" />

    <Button
        android:id="@+id/Nmode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text="3X3 Mode"
        android:onClick="openNmode"/>

    <Button
        android:id="@+id/Umode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text="5X5 Mode"
        android:onClick="openUmode"/>

    <Button
        android:id="@+id/about_game"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text="About Game"
        android:onClick="openAboutGame"/>

    <Button
        android:id="@+id/quit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Quit"
        android:textSize="30sp"
        android:visibility="visible"
        android:onClick="openquit"/>

</LinearLayout>
